<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:animateLayoutChanges="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:background="@drawable/background_badge"
        app:layout_collapseMode="parallax">

        <Spinner
                android:id="@+id/spinner_sort"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:prompt="@string/app_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/spinner_view"
                tools:ignore="MissingConstraints"/>

        <Spinner
                android:id="@+id/spinner_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toEndOf="@id/spinner_sort"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>